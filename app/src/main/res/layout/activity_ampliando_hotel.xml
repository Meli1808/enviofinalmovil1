<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fotoampliado"
    tools:context=".AmpliandoHotel">

    <ImageView
        android:id="@+id/fotoampliandoHotel"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/hotel1"
        android:scaleType="fitXY"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintVertical_bias="0.05"/>

    <ImageView
        android:id="@+id/fotoampliandoHotel2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/fotoampliandoHotel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/hotel11"
        android:scaleType="fitXY"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.05"/>

    <TextView
        android:id="@+id/nombreampliandoHotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fotoampliandoHotel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="CasaBenigno"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.5"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/precioampliandoHotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$80000 COP"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nombreampliandoHotel"
        app:layout_constraintVertical_bias="0.04" />


    <TextView
        android:id="@+id/telefonoampliandohotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3107099476"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/precioampliandoHotel"
        app:layout_constraintVertical_bias="0.04" />

    <TextView
        android:id="@+id/comentariosubAmpliandohotel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Comentario"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/telefonoampliandohotel"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/comentarioAmpliandohotel"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="''La estadía estuvo muy tranquila, confortable, el clima es un poco extremista, el resto bien.''"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comentariosubAmpliandohotel"
        app:layout_constraintVertical_bias="0.01" />

    <TextView
        android:id="@+id/calificacionAmpliandohotel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Calificación"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comentarioAmpliandohotel"
        app:layout_constraintVertical_bias="0.1" />

    <RatingBar
        android:id="@+id/valoracionAmpliandohotel"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:progressTint="@color/goldenrod"
        android:rating="4"
        android:scaleX="0.6"
        android:scaleY="0.6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calificacionAmpliandohotel"
        app:layout_constraintVertical_bias="0."
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/botonAmpliandohotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="130dp"
        android:background="@drawable/botonredondo"
        android:textStyle="bold"
        android:text="@string/Reservar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/valoracionAmpliandohotel"
        app:layout_constraintVertical_bias="0.4" />

</androidx.constraintlayout.widget.ConstraintLayout>

