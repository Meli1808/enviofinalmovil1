<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fotoampliado"
    tools:context=".AmpliandoTurismo">

    <TextView
        android:id="@+id/nombreAmpliandomuseo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Casa Museo Hacienda Belen"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintVertical_bias="0.02"
        app:layout_constraintHorizontal_bias="0.5"
        />

    <ImageView
        android:id="@+id/fotoAmpliandomuseo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="25dp"
        android:scaleType="fitXY"
        android:src="@drawable/haciendabelen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12" />

    <ImageView
        android:id="@+id/fotoAmpliandomuseo2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="25dp"
        android:scaleType="fitXY"
        android:src="@drawable/haciendabelen11"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toEndOf="@id/fotoAmpliandomuseo"
        app:layout_constraintTop_toBottomOf="@id/nombreAmpliandomuseo"
        app:layout_constraintVertical_bias="0.04" />

    <TextView
        android:id="@+id/contactoAmpliando"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fotoAmpliandomuseo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Contacto:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintVertical_bias="0.04"
        app:layout_constraintHorizontal_bias="0.1"
        />

    <TextView
        android:id="@+id/contactonombreAmpliando"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fotoAmpliandomuseo"
        app:layout_constraintStart_toEndOf="@id/contactoAmpliando"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Guillermo Valencia Zamora"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintVertical_bias="0.04"
        app:layout_constraintHorizontal_bias="0.4"
        />

    <TextView
        android:id="@+id/telefonoAmpliandomuseo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/contactoAmpliando"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Telefono:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintVertical_bias="0.02"
        app:layout_constraintHorizontal_bias="0.1"
        />

    <TextView
        android:id="@+id/numeroAmpliandomuseo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/contactonombreAmpliando"
        app:layout_constraintStart_toEndOf="@id/telefonoAmpliandomuseo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="3025698745"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintHorizontal_bias="0.1"
        />

    <TextView
        android:id="@+id/costoAmpliandomuseo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/telefonoAmpliandomuseo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Precio:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintVertical_bias="0.02"
        app:layout_constraintHorizontal_bias="0.16"
        />

    <TextView
        android:id="@+id/precioAmpliandomuseo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/numeroAmpliandomuseo"
        app:layout_constraintStart_toEndOf="@id/costoAmpliandomuseo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="$30.000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintVertical_bias="0.02"
        app:layout_constraintHorizontal_bias="0.1"
        />

    <TextView
        android:id="@+id/comentariosubAmpliandomuseo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Comentario"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/precioAmpliandomuseo"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/comentarioAmpliandomuseo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="''El lugar es encantador, hay una naturaleza espectacular, el guía super atento, aprendí mucho en este visita.''"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comentariosubAmpliandomuseo"
        app:layout_constraintVertical_bias="0.01" />

    <TextView
        android:id="@+id/calificacionAmplianmuseo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Calificación"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comentarioAmpliandomuseo"
        app:layout_constraintVertical_bias="0.05" />

    <RatingBar
        android:id="@+id/valoracionAmpliandomuseo"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:progressTint="@color/goldenrod"
        android:rating="5"
        android:scaleX="0.6"
        android:scaleY="0.6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calificacionAmplianmuseo"
        app:layout_constraintVertical_bias="0.1"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/botonAmpliandomuseo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="130dp"
        android:background="@drawable/botonredondo"
        android:textStyle="bold"
        android:text="@string/Reservar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/valoracionAmpliandomuseo"
        app:layout_constraintVertical_bias="0.4" />

</androidx.constraintlayout.widget.ConstraintLayout>